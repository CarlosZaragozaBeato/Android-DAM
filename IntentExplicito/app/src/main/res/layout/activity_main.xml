<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- INICIO URL -->

    <TextView
        android:id="@+id/textViewURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:text="URL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextURL"
        android:layout_width="262dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewURL"
        app:layout_constraintStart_toEndOf="@+id/textViewURL" />

    <Button
        android:id="@+id/buttonURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Ir a"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextURL"
        app:layout_constraintStart_toEndOf="@+id/editTextURL" />

    <!-- FIN URL -->

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="40dp"
        android:background="#FF9800"
        app:layout_constraintTop_toBottomOf="@+id/editTextURL"
        tools:layout_editor_absoluteX="0dp" />

    <!-- INICIO MAPA -->

    <TextView
        android:id="@+id/textViewLongitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:text="Longitud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divider" />

    <EditText
        android:id="@+id/editTextLongitud"
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewLongitud"
        app:layout_constraintStart_toEndOf="@+id/textViewLongitud" />

    <TextView
        android:id="@+id/textViewLatitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Latitud"
        app:layout_constraintStart_toStartOf="@+id/textViewLongitud"
        app:layout_constraintTop_toTopOf="@+id/textViewLongitud" />

    <EditText
        android:id="@+id/editTextLatitud"
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewLatitud"
        app:layout_constraintStart_toStartOf="@+id/editTextLongitud" />

    <Button
        android:id="@+id/buttonMAPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="88dp"
        android:text="Ir a"
        app:layout_constraintStart_toEndOf="@+id/editTextLongitud"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <!-- FIN MAPA -->

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="40dp"
        android:background="#03A9F4"
        app:layout_constraintTop_toBottomOf="@+id/editTextLatitud"
        tools:layout_editor_absoluteX="0dp" />

    <!-- INICIO CORREO -->

    <TextView
        android:id="@+id/textViewCORREO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:text="Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divider1" />

    <EditText
        android:id="@+id/editTextCORREO"
        android:layout_width="262dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewCORREO"
        app:layout_constraintStart_toEndOf="@+id/textViewCORREO" />

    <Button
        android:id="@+id/buttonCORREO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Enviar email"
        app:layout_constraintEnd_toEndOf="@+id/editTextCORREO"
        app:layout_constraintTop_toBottomOf="@+id/editTextCORREO" />

    <EditText
        android:id="@+id/editTextRecibido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913" />


</androidx.constraintlayout.widget.ConstraintLayout>